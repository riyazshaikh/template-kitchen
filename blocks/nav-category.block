	{.section collection}
		{.section categories}
    <div class="category-nav" data-background="solid" data-align="center">
			<nav class="navigation" role="navigation">
				<div class="{.if categoryFilter}{.or} active-link{.end}">
					<a href="{fullUrl}">All</a>
				</div>
				{.repeated section @}
				<div class="{.equal? categoryFilter @} active-link{.end}">
						<a href="{fullUrl}?category={@|url-encode}">{@}</a>
				</div>
				{.end}
			</nav>
		</div>
		{.end}
	{.end}

