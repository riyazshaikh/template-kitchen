<div class="banner{.if mainImage} has-image{.end}" data-collection-id="{id}" data-edit-main-image="Background" data-annotation-alignment="bottom left">    
	{.section mainImage}
    <figure class="loading content-fill"><img class="image" {@|image-meta} /></figure>
  {.end}
  <div class="blocks" data-palette="banner" data-typeset="banner" data-background=translucent>
    <squarespace:block-field class="content" id="banner-content-{id}" columns="12" label="Banner Content" data-annotation-alignment="bottom"/>
  </div>
  <div class="description" data-palette="banner" data-typeset="banner" data-background=translucent>
    <div class="content{.if description} has-description{.end}" data-layout-width=main>
      <div data-content-field="description">
        <div class="title" data-content-field="title" data-appearance=heading1>
          {title}
        </div>            
      {description}
      </div>
    </div>
  </div>
</div>

