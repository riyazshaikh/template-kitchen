<div class="blog-support" data-layout-width=main>

  <div class="blog-list">
  {.section categoryFilter}
    <p>Filtering by Category: {@|safe}</p>
  {.end}

  <!--ITEM LOOP-->

  {.repeated section items}

    <!--WRAPPER-->
    
    <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">
      
      <!--MAIN IMAGE-->

      {.main-image?}  
        <a href="{fullUrl}">
          <figure class="loading content-fill"><img {@|image-meta} /></figure>
        </a>
      {.end}

      <!--POST TILE-->

      <h2 class="title" data-content-field="title">
        {.passthrough?}
          <a href="{sourceUrl}" target="_blank">{title}</a>
        {.or}
          <a href="{fullUrl}">{title}</a>
        {.end}
      </h2>

      <!--EXCERPT OR BODY-->

      {.if excerpt}
      <div class="excerpt">
        {excerpt}
        <a class="link" href="{fullUrl}">Read More</a>
      </div>
      {.end}

      <!--BLOG INJECTION-->

      {postItemInjectCode}    

      <!--CATEGORIES-->

      {.repeated section categories}
        <a class="category" href="?category={@|url-encode}">{@}</a>{.alternates with},
      {.end}

      <!--TAGS-->

      {.repeated section tags}
        <a class="tag" href="?tag={@|url-encode}">{@}</a>{.alternates with},
      {.end}

      <!--SHARE AND LIKE-->

      {# @|like-button}
      {# @|social-button}

      <!--POST META-->
      
      <p class="meta" data-appearance="meta">
        Updated on <a href="{fullUrl}"><time datetime="{updatedOn|date %F}">{updatedOn|date %B %d, %Y}</time></a>
      </p>        

      <!--LINK TO COMMENTS-->

      {# @|comment-link}

    </article>

    {.or}
      No blog posts yet.
  {.end}
  </div>
</div>
