<div class="index content">
  <div class="nav" data-align=center>
    {@|apply nav-index.block}
  </div>

{.section collection}
  <!-- Create index sections -->

  {.repeated section collections}
  <div id="index-{@index}" class="index-section" data-url-id="{urlId}" data-collection-id="{id}">
    <div class="index-{typeName} content" data-content-field="main-content">
    {.collectionTypeNameEquals? gallery}
      {.equal? collection.regionName "charlie"}
        {@|apply gallery-charlie.block}
      {.or}
        {.equal? collection.regionName "delta"}
          {@|apply gallery-delta.block}
        {.or}
          {.equal? collection.regionName "foxtrot"}
            {@|apply gallery-foxtrot.block}
          {.or}
            {@|apply gallery-default.block}
          {.end}
        {.end}
      {.end}
    {.end}

    {.collectionTypeNameEquals? page}
      {mainContent}
    {.end}
    </div>
  </div>
  {.end}

{.end}
</div>