<div class="index content">
  <div class="nav" data-align=center>
    {@|apply nav-index.block}
  </div>

{.section collection}
  <!-- Create index sections -->

  {.repeated section collections}
  <div id="index-{@index}" class="index-section" data-url-id="{urlId}" data-collection-id="{id}">
    <div id="index-{@index}-banner">
      {@|apply banner.block}
    </div>
    <div id="index-{@index}-{typeName}" class="index-{typeName} content" data-content-field="main-content">
    {.equal? typeName "gallery-scroll"}
      {@|apply gallery-scroll.block}
    {.or}  
      {.equal? typeName "gallery-slide"}
        {@|apply gallery-slide.block}
      {.or}
        {mainContent}
      {.end}
    {.end}
    </div>
  </div>
  {.end}

{.end}
</div>