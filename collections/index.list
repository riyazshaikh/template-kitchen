<div id="index-content">
  <!-- <div id="nav-index" class="nav-wrapper" data-sticky-on="#index-content" data-nav-index-content=".index-section"> -->
    {# @|apply nav-index.block}
  <!-- </div> -->

{.section collection}
  <!-- Create index sections -->

  {.repeated section collections}
  <div id="index-{@index}" class="index-section{.if mainImage} has-image{.end}" data-url-id="{urlId}">
    <div class="index-section-content">
      {.collectionTypeNameEquals? gallery}
        <div id="index-{@index}-gallery" class="index-gallery-wrapper">
          {@|apply index-gallery-multi.block}
        </div>
      {.or}
        {.if description}
          <div class="banner-wrapper">
            {@|apply banner.block}
          </div>
        {.or}
          {.section mainImage}
            <figure class="loading content-fill"><img {@|image-meta} /></figure>
            <div class="color-overlay" data-content-field="main-image"></div>
          {.end}
          <div class="content-wrapper">
            <div class="content-inner" data-content-field="main-content">
              {mainContent}
            </div>
          </div>
        {.end}
      {.end}
    </div>
  </div>
  {.end}

{.end}
</div>