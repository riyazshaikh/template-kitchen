{.section item}
<div class="products-custom" data-item-id="{id}">
  <div class="sticky-container" data-sticky="within" data-intrinsic="laptop">
    <div class="background" data-background="solid">
      <div class="foreground content-fill">   
			  {.repeated section items}
				  {.equal? @index 2}
						<img {@|image-meta} data-load="true" class="loading" />
				  {.end}
				{.end}
      </div>
    </div>

    <div class="overlap-container">
	    <div data-intrinsic="tablet">
		    <div class="background">
		      <div class="foreground content-fill">   
					  {.repeated section items}
						  {.equal? @index 1}
								<img {@|image-meta} data-load="true" class="loading" />
						  {.end}
						{.end}
		      </div>
		    </div>
	    </div>
	    <div data-intrinsic="phone">
		    <div class="background">
		      <div class="foreground content-fill">   
					  {.repeated section items}
						  {.equal? @index 3}
								<img {@|image-meta} data-load="true" class="loading" />
						  {.end}
						{.end}
		      </div>
		    </div>
	    </div>
    </div>

    <div class="actions">
    	<a target=_blank href="//{urlId}.squarespace.com">PREVIEW</a>
	  	{@|product-checkout}
    	<a target=_blank href="//{urlId}.squarespace.com/readme">README</a>
	  </div>
  </div>
  
  <div class="product-meta" data-layout-width="meta" data-layout-align="left">
    <h1 class="product-title" data-content-field="title">{title}</h1>

    <div class="product-excerpt" data-content-field="excerpt">{excerpt}</div>

	  <div class="product-info">
	  	<h2 class="features">Design Features</h2>
	  	{body}
	  	<h2 class="about">About</h2>
	  	<div data-align="space-between">
	  		<span class="label">Made By</span>
	  		<span class="value"><a class="author" href="#">{author.displayName}</a></span>
	  	</div>
	  	<div data-align="space-between">
	  		<span class="label">Last Updated</span>
	  		<span class="value"><a><time datetime="{addedOn|date %F}">{updatedOn|date %B %d, %Y}</time></a></span>
	  	</div>
	  	<div data-align="space-between">
	  		<span class="label">Compatibility</span>
	  		<span class="value"><i class="fa fa-chrome fa-lg" title="Chrome Latest"></i><i class="fa fa-firefox fa-lg"  title="Firefox Latest"></i><i class="fa fa-edge fa-lg" title="IE 11+"></i><i class="fa fa-safari fa-lg" title="Safari 8+"></i><i class="fa fa-opera fa-lg" title="Opera Latest"></i></span>
	  	</div>
	  	<div data-align="space-between">
	  		<span class="label">Support</span>
	  		<span class="value"><a href="/terms-of-service#license">Terms</a><a href="/terms-of-service#support-policy">Conditions</a><a href="/terms-of-service#refund-policy">Refunds</a></span>
	  	</div>
	  </div>  
	</div>
</div>
{.end}
