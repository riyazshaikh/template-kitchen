<div class="products-page">

	<div id="products-nav" data-align="center">
		<div id="category-nav">
			{@|apply nav-category.block}
		</div>
	</div>
	
	<!-- Product Grid -->

	<div class="productgrid clear-fix">

		{.repeated section items}
		<div class="productitem">
			<a href="{fullUrl}" class="productitem-thumb {@|item-classes}" data-item-id="{id}">

				{.main-image?}
					<img {@|image-meta} data-load="true" class="loading" />
				{.end}

			</a>

			<div class="productitem-info">
				<div class="info-cell"><a href="{fullUrl}">{title}</a> <a class="author" href="?author={author.id}">- {author.displayName}</a></div>
				<div class="info-cell"><small>{@|product-price}{@|product-status}</small></div>
			</div>
		</div>
			

		{.end}

	</div>


</div>