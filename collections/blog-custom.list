<div id="blog-map"></div>
<style>
#blog-map {
  padding-bottom: 30%;
  margin: 1em 0 2em 0;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.08);
}

/*** Image ***/
.gm-style .content .image {
  display: block;
  position: relative;
  padding-bottom: 50%;
}
.gm-style .content .image figure {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
}
.gm-style img {
  max-width: none !important;
}

.gm-style .content .title h2 {
  margin: 0.5em 0;  
}

/** Hide X **/
.gm-style .gm-style-iw > div, .gm-style .gm-style-iw > div > div  {
  overflow: visible !important;
}
.gm-style-iw + div {
  display: none !important;
}
.gm-style .content {
  margin-right: -1.5rem;
}


</style>
<squarespace:script src="blog-map.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

<div class="blog-content">

  <div class="blog-list">
  <!-- CATEGORY FILTER RESULTS ex: http://base-template.squarespace.com/blog/?category=category1 -->

  {.section categoryFilter}
    <p>Filtering by Category: {@|safe}</p>
  {.end}

  <!-- TAG FILTER RESULTS ex: http://base-template.squarespace.com/blog/?tag=tag2 -->

  {.section tagFilter}
    <p>Filtering by Tag: {@|safe}</p>
  {.end}

  <!-- AUTHOR FILTER RESULTS ex: http://www.base-template.com/blog?author=4f046df4d09ae2cf23d1aaa2 -->

  {.if authorFilter}
    <p>Filtering by Author: {author.displayName}</p>
  {.end}

  <!--ITEM LOOP-->

  {.repeated section items}

    <!--WRAPPER-->
    
    <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">
      
      <!--MAIN IMAGE-->

      {.main-image?}  
        <a href="{fullUrl}">
          <figure class="loading content-fill"><img {@|image-meta} /></figure>
        </a>
      {.end}

      <!--POST TILE-->

      <h2 class="title" data-content-field="title">
        {.passthrough?}
          <a href="{sourceUrl}" target="_blank">{title}</a>
        {.or}
          <a href="{fullUrl}">{title}</a>
        {.end}
      </h2>

      <!--EXCERPT OR BODY-->

      {.if excerpt}
      <div class="excerpt">
        {excerpt}
        <a class="link" href="{fullUrl}">Read More</a>
      </div>
      {.end}

      <!--BLOG INJECTION-->

      {postItemInjectCode}    

      <!--CATEGORIES-->

      {.repeated section categories}
        <a class="category" href="?category={@|url-encode}">{@}</a>{.alternates with},
      {.end}

      <!--TAGS-->

      {.repeated section tags}
        <a class="tag" href="?tag={@|url-encode}">{@}</a>{.alternates with},
      {.end}

      <!--SHARE AND LIKE-->

      {# @|like-button}
      {# @|social-button}

      <!--POST META-->
      
      <p class="meta">
        Published on <a href="{fullUrl}"><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></a> by <a href="?author={author.id}">{author.displayName}</a>.
        {.section sourceUrl}
          <a href="{@}" class="source" target="_blank">Source</a>.
        {.end}
      </p>        

      <!--LINK TO COMMENTS-->

      {# @|comment-link}

      <!--LOCATION-->

      {.section location}
        <div class="location">
        {.section addressTitle}
          {addressTitle}
          {addressLine1}
          {addressLine2}
          {addressCountry}
        {.end}
        </div>
      {.end}

    </article>

    {.or}
      No blog posts yet.
  {.end}
  </div>
<!--PAGINATION-->
  
{.if pagination}
  <nav>

    <!--NEWER PAGE-->

    {.if pagination.prevPage}
      <a href="{pagination.prevPageUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!--OLDER PAGE-->

    {.if pagination.nextPage}
      <a href="{pagination.nextPageUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
</div>


